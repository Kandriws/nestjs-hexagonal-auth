{{#> base title="Reset your password" preview="Reset your password request"}}
  {{#*inline "content"}}
    {{#if name}}
      <mj-text>Hi {{name}},</mj-text>
    {{else}}
      <mj-text>Hi,</mj-text>
    {{/if}}
    <mj-text>You requested to reset your password. Click the button below to continue.</mj-text>
    <mj-button href="{{resetLink}}">Reset password</mj-button>
    {{#if expiresAt}}
      <mj-text>This link expires at {{expiresAt}}.</mj-text>
    {{/if}}
  {{/inline}}
{{/base}}
