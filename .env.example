# Application
NODE_ENV=development
APP_NAME=AuthApp
HOST=localhost
PORT=3000
RESET_PASSWORD_FRONTEND_URL=http://localhost:3000/auth/reset-password

# Mailer
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your_email_here
MAIL_PASS=your_password_here
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME=Example App
OTP_RATE_LIMIT_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_WINDOW_MINUTES=15
ENCRYPTION_KEYS_FILE_PATH=./encryption-keys.json
# Security
SALT_ROUNDS=10
# JWT
JWT_ACCESS_SECRET=access_super_secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=refresh_super_secret
JWT_REFRESH_EXPIRATION=30d
JWT_RESET_SECRET=reset_super_secret
JWT_RESET_EXPIRATION=1h

# OAUTH GOOGLE
GOOGLE_CLIENT_ID=apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=SECREt
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Database
# DATABASE_URL will be auto-generated if not provided
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=auth_db
DB_SCHEMA=public
DB_SSL=false
DB_LOG_QUERIES=false
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/auth_db?schema=public&sslmode=prefer

#Cache / Redis
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379
CACHE_REDIS_PASSWORD=yourpassword
# If you prefer to use a full Redis URL instead of individual settings, uncomment and set the following line:
#CACHE_REDIS_URL=
CACHE_TTL_DEFAULT_SECONDS=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200